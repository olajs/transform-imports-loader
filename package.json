  "devDependencies": {
    "@babel/cli": "^7.17.6",
    "@babel/core": "^7.17.8",
    "@babel/preset-env": "^7.16.11",
    "@babel/preset-typescript": "^7.16.7",
    "@types/node": "^17.0.22",
    "esbuild": "^0.14.48",
    "esbuild-loader": "^2.19.0",
    "husky": "^7.0.4",
    "lint-staged": "^12.3.7",
    "prettier": "^2.6.0",
    "react": "^17.0.2",
    "rimraf": "^3.0.2",
    "typescript": "^4.6.2",
    "webpack": "^5.73.0"
